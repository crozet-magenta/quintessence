{% extends _layout %}

{% block title %}Poney - {{ newspaper.date }}{% endblock %}

{% block content %}



    <div class="col s12 m8 offset-m2 l6 offset-l3 ">
        <div class="card-panel grey lighten-5 z-depth-1 flow-text">
            <div class="col s10">
                Information journal
            </div>
            <div class="col s10">
                <div class="chip">
                    Date : {{ newspaper.date }}
                </div>
            </div>
        </div>
    </div>


    {% if hasAccess('newspapers.update') or hasAccess('newspapers.delete') %}
        <div class="fixed-action-btn">
            {% if hasAccess('newspapers.update') %}
                <a href="{{ url('admin.newspapers.update', [newspaper.id]) }}"
                   class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Editer">
                    <i class="large material-icons">edit</i>
                </a>
            {% endif %}
            {% if hasAccess('newspapers.delete') %}
                <a href="{{ url('admin.newspapers.delete', [newspaper.id]) }}"
                   class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Supprimer">
                    <i class="large material-icons">delete</i>
                </a>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}





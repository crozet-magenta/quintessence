{% extends _layout %}

{% block title %}Article - {{ article.title }}{% endblock %}

{% block content %}

    <div class="col s12 m8 offset-m2 l6 offset-l3 ">
        <div class="card-panel grey lighten-5 z-depth-1 flow-text">
            <div class="col s10">
                Information de l'article
            </div>
            <div class="col s10">
                <div class="chip">
                    titre : {{ article.title }}
                </div>
            </div>
            {% if article.picture is not empty %}
                <img src="{{ article.picture }}" alt="image article" class="responsive-img">
            {% endif %}

            <div class="col s10">
                <div class="chip">
                    Description : {{ article.content }}
                </div>
            </div>
            <div class="col s10">
                <div class="chip">
                    Type : {{ article.type }}
                </div>
            </div>
            <div class="col s10">
                <div class="chip">
                    Date du journal : <a href="{{ url('admin.newspapers.read', [article.newspaper.id]) }}">{{ article.newspaper.date }}</a>
                </div>
            </div>
        </div>
    </div>




    {% if hasAccess('articles.update') or hasAccess('articles.delete') %}
        <div class="fixed-action-btn">
            {% if hasAccess('articles.update') %}
                <a href="{{ url('admin.articles.update', [article.id]) }}"
                   class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Editer">
                    <i class="large material-icons">create</i>
                </a>
            {% endif %}
            {% if hasAccess('articles.delete') %}
                <a href="{{ url('admin.articles.delete', [article.id]) }}"
                   class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Supprimer">
                    <i class="large material-icons">delete</i>
                </a>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}

{% extends _layout %}

{% block title %}Attribut - {{ attribute.name }}{% endblock %}

{% block content %}


    <div class="col s12 m8 offset-m2 l6 offset-l3 ">
        <div class="card-panel grey lighten-5 z-depth-1 flow-text">
            <div class="col s10">
                Information de l'attribut
            </div>
            <div class="col s10">
                <div class="chip">
                    nom : {{ attribute.name }}
                </div>
            </div>

            <div class="col s10">
                <div class="chip">
                    Type : {{ attribute.type }}
                </div>
            </div>
        </div>
    </div>


    {% if hasAccess('attributes.update') or hasAccess('attributes.delete') %}
        <div class="fixed-action-btn">
            {% if hasAccess('attributes.update') %}
                <a href="{{ url('admin.attributes.update', [attribute.id]) }}"
                   class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Editer">
                    <i class="large material-icons">edit</i>
                </a>
            {% endif %}
            {% if hasAccess('attributes.delete') %}
                <a href="{{ url('admin.attributes.delete', [attribute.id]) }}"
                   class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Supprimer">
                    <i class="large material-icons">delete</i>
                </a>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}

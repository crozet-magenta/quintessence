{% extends _layout %}

{% block title %}Poney - {{ poney.name }}{% endblock %}

{% block content %}



    <div class="col s12 m8 offset-m2 l6 offset-l3 ">
        <div class="card-panel grey lighten-5 z-depth-1 flow-text">
            <div class="col s10">
                Information poney
            </div>
            <div class="col s10">
                <div class="chip">
                    nom : {{ poney.name }}
                </div>
            </div>
            <div class="col s10">
                <div class="chip">
                    niveau : {{ poney.level }}
                </div>
            </div>
        </div>
    </div>



    <div class="col s12 m8 offset-m2 l6 offset-l3 ">
        <div class="card-panel grey lighten-5 z-depth-1 flow-text">
            <div class="col s10">
                Information race
            </div>
            <div class="col s10">
                <div class="chip">
                    type : {{ poney.breed.label }}
                </div>
            </div>
            <div class="col s10">
                <div class="chip">
                    Description : {{ poney.breed.description }}
                </div>
            </div>
        </div>
    </div>

    <div class="col s12 m8 offset-m2 l6 offset-l3 ">
        <div class="card-panel grey lighten-5 z-depth-1 flow-text">
            <div class="col s10">
                Information utilisateur
            </div>
            <div class="col s10">
                <div class="chip">
                    Appartient Ã  :
                    {% if poney.user %}
                        <a href="{{ url('admin.users.read', [poney.user.id]) }}">{{ poney.user.pseudo }}</a>
                    {% else %}
                        personne
                    {% endif %}
                </div>
            </div>
        </div>
    </div>


    {% if hasAccess('poneys.update') or hasAccess('poneys.delete') %}
        <div class="fixed-action-btn">
            {% if hasAccess('poneys.update') %}
                <a href="{{ url('admin.poneys.update', [poney.id]) }}" class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Editer">
                    <i class="large material-icons">edit</i>
                </a>
            {% endif %}
            {% if hasAccess('poneys.delete') %}
                <a href="{{ url('admin.poneys.delete', [poney.id]) }}" class="btn-floating btn-large tooltipped blue"
                   data-position="top" data-delay="150" data-tooltip="Supprimer">
                    <i class="large material-icons">delete</i>
                </a>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}




